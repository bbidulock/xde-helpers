[Desktop Entry]
Type=Service
ServiceTypes=KonqPopupMenu/Plugin,all/allfiles;
NoDisplay=true
X-AppInstall-Package=kde-servicemenus-thunderbird-attachment
X-AppInstall-Section=aur
X-Arch-Package=kde-servicemenus-thunderbird-attachment 1.1.2-1
X-Arch-Package-Repository=aur
X-Arch-Package-Name=kde-servicemenus-thunderbird-attachment
X-Arch-Package-Version=1.1.2-1
X-Arch-Package-Description=Attach to thunderbird service for Dolphin.
X-Arch-Package-Groups=None
X-Arch-Package-URL=http://opendesktop.org/content/show.php?content=122832
X-Arch-Package-Votes=0
Aliases=thunderbird_attachment;
